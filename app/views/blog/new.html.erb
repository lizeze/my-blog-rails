<div class="text-center">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: 'alert alert-info' %>
            <% end %>
</div>
<%= form_with model: @blog ,method:'post', url: '/blog' ,:class=>'form-horizontal' do |form| %>
    <div class="form-group">
        <%= form.label  :title,"标题",:class=> "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= form.text_field :title , :class=>'form-control' %>
                <% @blog.errors.full_messages_for(:title).each do |message| %>
            
                <div>
                    <%= message %>
                </div>
                <% end %>
            </div>
          
    </div>

    <div class="form-group">
        <%= form.label :tags,'标签',:class=> "col-sm-2 control-label"  %>
            <div class="col-sm-10">
                <%= form.text_field :tags , :autocomplete=>'off',:class=>'form-control', :list=>'blog_tags_list'  %>
                    <datalist id="blog_tags_list">
                        <option value="Chocolate">
                        <option value="Chocolate1">
                        <option value="Chocolate2">
                    </datalist>
            </div>
    </div>
    <div class="form-group upload">


        <%= form.file_field :attachment %>
        
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit :class=>'btn btn-default' %>

        </div>
    </div>

    <script>
        $('form').on('keypress', e => {
            
            if (e.keyCode == 13) {
                 return false;
            }
        });

    </script>



    <% end %>