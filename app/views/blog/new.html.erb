<div class="text-center">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: 'alert alert-info' %>
            <% end %>
</div>
<%= form_with model: @blog ,method:'post', url: '/blog' ,:class=>'form-horizontal' do |form| %>
    <div class="form-group">
        <%= form.label :title,"标题",:class=> "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= form.text_field :title , :class=>'form-control' %>
                    <% @blog.errors.full_messages_for(:title).each do |message| %>

                        <div>
                            <%= message %>
                        </div>
                        <% end %>
            </div>

    </div>

    <div class="form-group">


        <%= form.label :tags,'标签',:class=> "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= form.text_field :tags , :autocomplete=>'off',:class=>'form-control' %>
                
              
            </div>
    </div>

    <div class="form-group">


        <%= form.label :describe,'描述',:class=> "col-sm-2 control-label" %>
            <div class="col-sm-10">
                <%= form.text_field :describe , :autocomplete=>'off',:class=>'form-control' %>
                
              
            </div>
    </div>
    <div class="form-group upload">


        <%= form.file_field :attachment %>

    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit :class=>'btn btn-default' %>

        </div>
    </div>

    <script>
        $('form').on('keypress', e => {

            if (e.keyCode == 13) {
                return false;
            }
        });

        $('.tags .label').click(e => {
            console.log(e.target.textContent)
        })

    </script>



    <% end %>