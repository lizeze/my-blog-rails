<%= render(HeaderComponent.new()) do %>
    <% end %>

        <ul class="lz-list">
            <% @post.each do |post| %>
                <li>
                    <%= link_to post.title, post %>
                </li>

                <li>
                    <%= link_to "Destroy" , post_path(post), data: { turbo_method: :delete,
                        turbo_confirm: "Are you sure?" } %>
                </li>
                <% end %>
        </ul>
        <%= link_to "New Post" , new_post_path %>